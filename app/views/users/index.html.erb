<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'books/user_info', user: @user %>
      <%= render 'books/new_book', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
    	 <h2>Users</h2>
     <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag(user.profile_image.present? ? user.profile_image : 'default-image.jpg', size: "150x150") %></td>
        <td><%= user.name %></td>
        <td>
          <%= link_to 'Show', user_path(user) %> <!-- ユーザーへのリンク -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>