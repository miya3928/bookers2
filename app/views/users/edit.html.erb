
<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class= 'col-md-3 offset-md-4'>
     <h1>user info</h1>
        <% if @user.errors.any? %>
          <div>
            <strong><%= @user.errors.count %> errors prohibited this book from being saved:</strong>
             <ul>
             <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
             <% end %>
            </ul>
          </div>
         <% end %>
     <%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>	      
       <h4>name</h4>
	      <%= f.text_field :name %>
	      <h4>image</h4>
	      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
	      <h4>introduction</h4>
	      <%= f.text_area :introduction %>
	      <%= f.submit "Update User", class: "btn btn-success btn-sm btn-block"%>
	     <% end %>
	   </div>
	 </div>
</div>