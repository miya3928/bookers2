<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
     <h1>user info</h1>
       <%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>	      
       <h4>name</h4>
	      <%= f.text_field :name %>
	      <h4>image</h4>
	      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
	      <h4>introduction</h4>
	      <%= f.text_area :introduction %>
	      <%= f.submit "Update User", class: "btn btn-success btn-sm btn-block"%>
	     <% end %>
	   </div>
	 </div>
</div>