<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <tr>
          <td><%= image_tag(@user.profile_image.present? ? @user.profile_image : 'default-image.jpg') %></td>
        </tr>
        <tr>
          <th>name</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @user.introduction %></td>
        </tr>
      </table>
      <div class='row'>
        <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-primary btn-sm' %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local: true do |f| %>
        <h4>title</h4>
        <%= f.text_field :title %>
        <h4>opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit "Create book", class: "btn btn-success btn-sm btn-block" %>
      <% end %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
              <td><%= link_to 'Show', book_path(book) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>