<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <div>
  　　　<%= flash[:notice] %>
　　　</div>
       <%= render 'books/user_info', user: @user %>
       <%= render 'books/new_book', book: @book %>
    </div>  
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
              <% if @user.profile_image.attached? %>
                <%= link_to user_path(@other_user) do %>
                <%= image_tag @user.profile_image, size: "100x100" %>
               <% end %>
              <% else %>
                <%= link_to user_path(@other_user) do %>
                <%= image_tag 'default-image.jpg', size: "100x100" %>
              <% end %>
            <% end %>
            <p><%= link_to @user.name, user_path(@user) %></p>
          </td>
              <td><%= link_to book.title, book_path(book)  %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
