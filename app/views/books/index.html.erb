 <div>
        <% if flash[:notice] %>
          <div class="alert alert-success">
            <%= flash[:notice] %>
          </div>
        <% end %>
      </div>
      
      <% if @book.errors.any? %>
        <div class="alert alert-danger">
          <strong><%= @book.errors.count %> errors prohibited this book from being saved:</strong>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      



<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
     
      <%= render 'books/user_info', user: current_user %>
      <%= render 'books/new_book', book: @book %>
    </div>
    
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% if @books.present? %>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <% if book.user.profile_image.attached? %>
                    <%= image_tag book.user.profile_image, size: "100x100" %>
                  <% else %>
                    <%= image_tag 'default-image.jpg', size: "100x100" %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="3">No books available</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>