<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	   	 <%= render 'books/user_info', user: current_user %>
	     <%= render 'books/new_book', book: @book %>
	  </div>
	  <div class='col-md-8 offset-md-1'>
	   <h2>Book Details</h2>
      <table class="table">
        <tr>
          <td>
            <% if @user.profile_image.attached? %>
              <%= image_tag @user.profile_image, size: "100x100" %>
            <% else %>
              <%= image_tag('default-image.jpg', size: "100x100")  %>
            <% end %>
             <p><%= link_to @user.name, user_path(@user) %></p>
          </td>
          <td><%= link_to @book.title, book_path(@book)  %></td>
          <td><%= @book.body %></td>
          <td>
          <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Destroy', book_path(@book), method: :delete, class: 'btn btn-primary btn-sm' %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>